<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="5dp"
	android:paddingRight="5dp"
	android:descendantFocusability="beforeDescendants">
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:paddingBottom="7dp"
	    android:paddingStart="3dp"
		android:paddingEnd="3dp"
		android:background="@drawable/card_background_selector"
		android:descendantFocusability="afterDescendants">
	
	    <ImageView
	        android:contentDescription="postImg"
	        android:id="@+id/previewImg"
	        android:layout_width="match_parent"
	        android:layout_height="210dp"
	        android:layout_alignParentEnd="true"
	        android:layout_alignParentStart="true"
	        android:layout_alignParentTop="true"
	        android:paddingTop="10dp"
	        android:src="@drawable/pratyaksha" />
	
	    <TextView
	        android:id="@+id/heading"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/previewImg"
	        android:textSize="20sp"
	        android:paddingStart="5sp"
	        android:textColor="#FCFCFC"
	        android:background="#80000000"
	        android:paddingEnd="5dp"
	        android:paddingTop="-10dp" />
	    
	    <TextView
	        android:id="@+id/description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentEnd="true"
	        android:textSize="14sp"
	        android:paddingEnd="5dp"
	        android:paddingTop="6dp"
	        android:paddingStart="10dp"
	        android:layout_alignParentStart="true"
	        android:layout_alignStart="@+id/heading"
	        android:layout_below="@+id/heading" />
	
	</RelativeLayout>
</FrameLayout><!-- From: file:/C:/Users/Nuclearrambo/AndroidstudioProjects/Pratyaksha_Android/app/src/main/res/layout/category_item_layout.xml -->